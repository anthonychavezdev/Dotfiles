# keybindings
map i recolor
# map J zoom out
# map K zoom in
map D toggle_page_mode

# colors
set statusbar-fg                "#ffffff"
set statusbar-bg                "#000000"
set inputbar-bg                 "#000000"
set inputbar-fg                 "#ffffff"

set notification-bg             "#000000"
set notification-fg             "#ffffff"
set notification-error-bg       "#000000"
set notification-error-fg       "#fb4934"
set notification-warning-bg     "#000000"
set notification-warning-fg     "#fb4934"

set highlight-color             "#00ff00"
set highlight-active-color      "#83a598"

set completion-bg               "#000000"
set completion-fg               "#aa7700"
set completion-highlight-fg     "#aa5600"
set completion-highlight-bg     "#2d0c74"

# Background color
set recolor-lightcolor          "#000000"
# Text color
set recolor-darkcolor           "#ffffff"

# Page seperator colors
set default-bg                  "#1d2021"
set default-fg                  "#3c3836"

set adjust-open "best-fit"
set recolor-reverse-video true
set zoom-max 25
set zoom-min 5
set zoom-step 10
